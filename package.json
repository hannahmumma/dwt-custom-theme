{
	"name": "dwt-custom-theme",
	"version": "1.0.0",
	"description": "A custom theme for the PRH divisions",
	"main": "index.js",
	"private": true,
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@tanstack/react-query": "^4.27.0",
		"@wordpress/icons": "^9.16.0",
		"autoprefixer": "^10.4.8",
		"classnames": "^2.3.2",
		"dotenv": "^16.0.1",
		"fs-extra": "^11.1.0",
		"install": "^0.13.0",
		"node-watch": "^0.7.3",
		"react-router-dom": "^6.8.0",
		"react-swiper": "^0.1.5",
		"swiper": "^8.4.7"
	},
	"devDependencies": {
		"@_tw/themejson": "^0.1.2",
		"@angular-eslint/template-parser": "^15.2.0",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/line-clamp": "^0.4.0",
		"@wordpress/eslint-plugin": "^13.9.0",
		"@wordpress/scripts": "^25.2.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.5",
		"eslint-plugin-php-markup": "^6.0.0",
		"eslint-plugin-tailwindcss": "^3.8.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"postcss-import-ext-glob": "^2.0.1",
		"prettier": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.2.2",
		"tailwindcss": "^3.1.7"
	},
	"scripts": {
		"development:editor": "cross-env _TW_TARGET=editor npx tailwindcss --postcss -i ./assets/dev/css/index.css -c ./tailwind.config.js -o ./assets/dist/css/style-editor.min.css",
		"development:editor-extra": "npx tailwindcss --postcss -i ./assets/dev/css/style-editor-extra.css -c ./tailwind.config.js -o ./assets/dist/css/style-editor-extra.min.css",
		"development:frontend": "npx tailwindcss --postcss -i ./assets/dev/css/index.css -c ./tailwind.config.js -o ./assets/dist/css/index.min.css",
		"development:esbuild": "npx esbuild index.min=./assets/dev/index.js  block-settings.min=./assets/dev/block-settings.js --target=esnext --bundle --loader:.js=jsx --loader:.png=dataurl --outdir=./assets/dist",
		"development:wp-scripts-start": "wp-scripts start --webpack-src-dir=./assets/dev/blocks --output-path=./assets/dist/blocks",
		"development": "run-p development:*",
		"dev": "npm run development",
		"watch:editor": "npm run development:editor -- --watch",
		"watch:editor-extra": "npm run development:editor-extra -- --watch",
		"watch:frontend": "npm run development:frontend -- --watch",
		"watch:esbuild": "npm run development:esbuild -- --watch",
		"watch:watch-assets": "node ./node_scripts/watch.js",
		"watch:wp-scripts-start": "wp-scripts start --webpack-src-dir=./assets/dev/blocks --output-path=./assets/dist/blocks",
		"watch": "run-p watch:*",
		"lint:css": "wp-scripts lint-style ./assets/dev/blocks/**/*.css",
		"lint:js": "wp-scripts lint-js ./assets/dev/blocks/**/*.js",
		"lint:js-fix": "wp-scripts lint-js ./assets/dev/blocks/**/*.js --fix",
		"lint:eslint": "npx eslint ./assets/dev/**/*.js",
		"lint-fix:eslint": "npx eslint ./assets/dev --fix",
		"lint:prettier": "npx prettier --check ./assets/dev/css/**/*.css",
		"lint-fix:prettier": "npx prettier --write ./assets/dev/css/**/*.css",
		"lint": "run-p lint:*",
		"lint-fix": "run-p lint-fix:*",
		"production:editor": "cross-env NODE_ENV=production npm run development:editor -- --minify",
		"production:editor-extra": "cross-env NODE_ENV=production npm run development:editor-extra -- --minify",
		"production:frontend": "cross-env NODE_ENV=production npm run development:frontend -- --minify",
		"production:esbuild": "npm run development:esbuild -- --minify",
		"production:copy-assets": "node ./node_scripts/copy.js",
		"production:wp-scripts-build": "wp-scripts build --webpack-src-dir=./assets/dev/blocks --output-path=./assets/dist/blocks",
		"production": "run-p production:*",
		"prod": "npm run production"
	}
}
