{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "dwt/book-cover",
	"version": "0.1.0",
	"title": "Book Cover",
	"category": "prh-modules",
	"icon": "book",
	"description": "Book cover",	
	"supports": {
		"html": false
	},
    "example": {},
    "parent": [ "dwt/featured-image" ],
    "attributes": {
        "isBookCover": {
            "default": true,
            "type": "boolean"
        },
        "backgroundColor": {
            "default": "#f6f6f6",
            "type": "string"
        },
        "imageSelection": {
        	"default": "",
        	"type": "string"
        },
        "apiImage": {
        	"default": "",
        	"type": "string"
        },
        "coverAltText": {
            "attribute": "alt",
            "default": "",
            "selector": "img",
            "source": "attribute",
            "type": "string"
        },
        "uploadedImage": {
            "default": {},
            "type": "object"
        },   
        "bookTitle": {
            "default": "",
            "type": "string"
        },
        "author": {
            "default": "",
            "type": "string"
        },
        "format": {
            "default": "",
            "type": "string"
        },
        "isbn": {
            "default": "",
            "type": "string"
        },        
        "workId": {
            "default": "",
            "type": "number"
        },
        "url": {
            "type": "string",
            "source": "attribute",
            "selector": "a",
            "attribute": "href"
        },        
        "linkTarget": {
            "type": "string",
            "source": "attribute",
            "selector": "a",
            "attribute": "target"
        }
	},
	"textdomain": "dwt-custom-theme",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
